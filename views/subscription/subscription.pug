extends ../layout

block content
  #logo
    #logo-retina 
      img(src="/assets/images/logo.png")
  #container
    #header
      #header-info(style="width:100%; max-width: 100%; text-align:center;") Thanks, your support means a lot!
    #body.content
      #form-fields
        table.table
          tr
            td Name
            td= customer.firstName + " " + customer.lastName
          tr
            td Email
            td= customer.email
          if customer.subscription
            tr 
              td Status
              td(class=customer.subscription.status === 'active' ? 'green' : 'orange')= customer.subscription.status
            tr 
              td Description
              td= customer.subscription.description
            tr 
              td Amount
              td â‚¬#{customer.subscription.amount}
          else
            tr 
              td Status
              td Pending
        p 
          small You're subscription will auto renew, please email us at <a href="maito:dan@partywith.co">dan@partywith.co</a> to cancel your subscription at any given time.